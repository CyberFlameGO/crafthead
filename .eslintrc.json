{
	"root": true,
	"extends": [
		"@nodecraft/eslint-config/typescript"
	],
	"plugins": [
		"json",
		"import"
	],
	"rules": {
		"import/order": ["error", {
			"alphabetize": {
				"order": "asc",
				"caseInsensitive": true
			},
			"groups": [
				"builtin",
				"external",
				["parent", "sibling"],
				"index",
				"type",
				"object"
			],
			"newlines-between": "always"
		}]
	}
}
